
<div class="bkpic_edit">
</div>

<div class="text-center">

  <br>
  <br>
  <br>
  <br>
  <h2>Edit Profile</h2>
  <% if resource && resource.errors %>
    <% resource.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <div class="tabs">
    <h4>Basic Info</h4>
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
        <%= render 'shared/devisenotify' %>
        <br>
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <div class="field">
          <%= f.text_field :fullname, autofocus: true, :class => "form-control", :placeholder => "Full Name", :id => "user_edit_fullname" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :phone_number, autofocus: true, :class => "form-control", :placeholder => "Phone Number" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, :class => "form-control", :placeholder => "Tell us about yourself", :id => "user_edit_description"%>
        </div>
        <br>
        <div class="field">
          <%= f.text_area :interest, rows: 5, cols: 25, autofocus: true, :class => "form-control", :placeholder => "What are your interests?" %>
        </div>
        <br>
        <div>
          <i class="fa fa-camera"> Profile Picture</i>
          <%= f.file_field :avatar %>
        </div>

        <br>
        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
        <br>
        </div>
      <% end %>
      <div class="col-md-3"></div>
    </div>

    <h4>Media Links</h4>
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
        <%= render 'shared/devisenotify' %>
        <br>
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <div class="field">
          <%= f.text_field :facebook, autofocus: true, :class => "form-control", :placeholder => "Facebook", :id => "user_edit_facebook" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :twitter, autofocus: true, :class => "form-control", :placeholder => "Twitter", :id => "user_edit_twitter" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :instagram, autofocus: true, :class => "form-control", :placeholder => "Instagram", id: "user_edit_instagram" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :linkedin, autofocus: true, :class => "form-control", :placeholder => "LinkedIn", id: "user_edit_linkedin" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :snapchat, autofocus: true, :class => "form-control", :placeholder => "Snapchat", id: "user_edit_snapchat" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :github, autofocus: true, :class => "form-control", :placeholder => "Github", :id => "user_edit_github" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :youtube, autofocus: true, :class => "form-control", :placeholder => "YouTube", id: "user_edit_youtube" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :google, autofocus: true, :class => "form-control", :placeholder => "Google+", id: "user_edit_google" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :twitch, autofocus: true, :class => "form-control", :placeholder => "Twitch.tv", id: "user_edit_twitch" %>
        </div>
        <br>
        <div class="field">
          <%= f.text_field :tripadvisor, autofocus: true, :class => "form-control", :placeholder => "TripAdvisor", id: "user_edit_tripadvisor" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
        <br>
      <% end %>
      </div>
      <div class="col-md-3"></div>
    </div>

    <h4>Account Settings</h4>
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
        <%= render 'shared/devisenotify' %>
        <br>
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <div class="field">
          <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email", :id => "user_edit_email" %>
        </div>
        <br>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "New Password (Leave blank if you don't want to change it)", :class => "form-control", :id => "user_edit_new_password"%>
        </div>
        <br>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", :class => "form-control", :id => "user_edit_new_password_confirmation" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
        <br>
      <% end %>
      </div>
      <div class="col-md-3"></div>
    </div>

  </div>
</div>

<script src="tabs.js"></script>
