



<div class="row">
  <br>
  <br>
  <br>
  <br>
  <div class="col-md-12 text-center">

    <br><br>
    <a href="/users/<%=@other.id%>">
      <strong class="message_head">
          <%= image_tag avatar_url(@other), class: "img-circle avatar-medium" %> <%= @other.fullname %>
      </strong>
    </a>

  </div>
  <br>

  <div class="col-md-2 conversation">
  </div>

  <div class="col-md-8 convesation">


    <div id="chat">
      <%= render @messages, locals: {conversation: @conversation} %>
    </div>


    <div class="panel panel-default">
      <div class="panel-heading">
        Conversation with <%= @other.fullname %>
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for [@conversation, @conversation.messages.new], remote: true do |f| %>
            <div class="form-group">
              <%= f.text_area :content, placeholder: "Add a personal message", class: "form-control", id: "message_content" %>
            </div>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <div class="actions">
              <%= f.submit "Send Message", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>


  </div>

  <div class="col-md-2 conversation">
  </div>

</div>

<%= subscribe_to conversation_messages_path(@conversation) %>
